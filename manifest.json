{
  "manifest_version": 2,
  "name": "FlippIt",
  "background": {
     "page": "lib/eventPage.html"
  },
  "description": "Effortlessly save and share across devices text, pictures, music and more!",

  "version": "1.24",
  "icons":{
	"48":"images/icon48.png",
	"128":"images/icon128.png"
	},
	"author":"Luan Ngo",
  "browser_action": {
    "default_icon": "images/icon36.png",
    "default_popup": "index.html"
  },
  "permissions": [
	"notifications",
	"clipboardWrite",
    "http://www.flippit.ca/",
	    "https://accounts.google.com/o/oauth2/token",
    "https://www.googleapis.com/chromewebstore/v1.1/notifications",
	"tabs",
	"gcm",
    "storage",
    "downloads"
  ]
}
